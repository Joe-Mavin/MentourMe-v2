{
  "name": "mentourme-server",
  "version": "1.0.0",
  "description": "MentourMe backend server",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:render": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "build": "echo 'No build step required for Node.js'",
    "postinstall": "echo 'Dependencies installed successfully'",
    "setup-prod": "node ../scripts/setup-production.js setup",
    "validate-prod": "node ../scripts/setup-production.js validate",
    "deploy": "npm run validate-prod && echo 'Ready for deployment'",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=tests/integration --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=tests/unit --detectOpenHandles --forceExit"
  },
  "keywords": [
    "mentorship",
    "nodejs",
    "express",
    "sequelize"
  ],
  "author": "MentourMe Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.5",
    "mysql2": "^3.6.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.4",
    "sequelize": "^6.37.3",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "socket.io-client": "^4.7.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "services/**/*.js",
      "routes/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
